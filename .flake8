[flake8]
max-line-length = 88
extend-ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501,
    # F401: module imported but unused (common in __init__.py files)
    F401
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    .mypy_cache,
    .pytest_cache,
    .tox,
    tests/fixtures/*
per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401
    # Tests may have unused imports and long lines
    tests/*:F401,E501
max-complexity = 10
docstring-convention = google